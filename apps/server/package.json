{
  "name": "@felix/server",
  "version": "0.1.0",
  "description": "Felix server exposing code intelligence via MCP, REST, and CLI",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./cli": {
      "import": "./dist/cli/index.js",
      "types": "./dist/cli/index.d.ts"
    }
  },
  "bin": {
    "felix": "./dist/cli/bin.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch --preserveWatchOutput",
    "dev:server": "node dist/server.js",
    "dev": "node ../../scripts/ensure-sidecar.mjs && npm run build && npm run dev:server",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "vitest run --config vitest.config.integration.ts",
    "test:integration:watch": "vitest --config vitest.config.integration.ts",
    "test:integration:coverage": "vitest run --coverage --config vitest.config.integration.ts",
    "test:all": "npm run test && npm run test:integration",
    "lint": "eslint src/**/*.ts",
    "docs": "typedoc src/index.ts",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "link": "npm run build && npm link",
    "unlink": "npm unlink -g",
    "start": "node dist/server.js",
    "serve": "node ../../scripts/ensure-sidecar.mjs && npm run build && npm start",
    "server": "npm run serve",
    "start:stdio": "node dist/stdio.js",
    "serve:stdio": "npm run build && npm run start:stdio",
    "postinstall": "node scripts/download-models.js",
    "download-models": "node scripts/download-models.js"
  },
  "keywords": [
    "code-analysis",
    "indexing",
    "multi-language",
    "context-generation",
    "ast",
    "knowledge-graph"
  ],
  "author": "Brett Thomas <epoplive>",
  "license": "(AGPL-3.0-only OR Commercial)",
  "files": [
    "dist/**/*",
    "README.md",
    "package.json"
  ],
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.0.0",
    "@types/supertest": "^6.0.3",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^8.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.3.4",
    "typedoc": "^0.27.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@felix/code-intelligence": "file:../../packages/code-intelligence",
    "@modelcontextprotocol/sdk": "^1.12.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^4.17.23",
    "@types/uuid": "^10.0.0",
    "@uiw/codemirror-theme-vscode": "^4.23.12",
    "@xenova/transformers": "^2.17.2",
    "axios": "^1.11.0",
    "better-sqlite3": "^11.6.0",
    "chokidar": "^4.0.3",
    "commander": "^11.0.0",
    "dotenv": "^16.4.7",
    "express": "^4.18.2",
    "ignore": "^7.0.4",
    "java-parser": "^2.3.3",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "socket.io": "^4.6.2",
    "sqlite3": "^5.1.7",
    "typeorm": "^0.3.25",
    "uuid": "^11.1.0",
    "webgpu": "^0.2.12",
    "tree-sitter": "^0.21.1",
    "tree-sitter-c-sharp": "^0.21.3",
    "tree-sitter-css": "^0.21.1",
    "tree-sitter-html": "^0.20.3",
    "tree-sitter-javascript": "^0.21.4",
    "tree-sitter-python": "^0.21.0",
    "tree-sitter-typescript": "^0.23.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/felix-ide/felix.git"
  }
}
